generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  STUDENT
  FACULTY
  ADMIN
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  passwordHash  String
  role          Role
  emailVerified Boolean  @default(false)

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  student       Student?
  faculty       Faculty?
}

model Student {
  id               String   @id @default(cuid())
  userId           String   @unique
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  fullName         String
  university       String
  program          String
  graduationDate   DateTime?

  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model Faculty {
  id           String   @id @default(cuid())
  userId       String   @unique
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  fullName     String
  title        String?
  department   String?
  institution  String

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
